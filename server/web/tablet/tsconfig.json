{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": ".",
        "experimentalDecorators": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "lib": [
            "dom",
            "es6"
        ]
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "*/**/node_modules"
    ]
}