    "version": "2.0.0",
    "tasks": [
        {
            "label": "deploy",
            "type": "shell",
            "command": "cd server;GLOBIGNORE='node_modules:dist:.vscode:.git'; rsync -avzh * root@192.168.10.102:/root/nodeserver",
            "problemMatcher": []
        },
        {
            "label": "deploy by docker",
            "type": "shell",
            "command": "docker build --rm -f \"server/Dockerfile\" -t left76/nodehomeserver:latest server;docker push left76/nodehomeserver:latest;ssh root@192.168.10.102 'docker pull left76/nodehomeserver:latest';ssh root@192.168.10.102 'docker restart left76/nodehomeserver:latest'",
            "problemMatcher": []
        },
        {
            "label": "Build web client",
            "type": "shell",
            "command": "cd client;ng build --watch --base-href=/static/ --output-path=../server/web/production",
            "problemMatcher": []
        },
        {
            "label": "Run server locally",
            "type": "shell",
            "command": "cd server;npm run dev",
            "problemMatcher": []
        }
    ]
}