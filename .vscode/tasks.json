{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deploy",
            "type": "shell",
            "command": "cd server;GLOBIGNORE='node_modules:dist:.vscode:.git'; rsync --exclude 'node_modules' --exclude 'dist' -avzh * root@192.168.121.38:/root/nodeserver",
            "problemMatcher": []
        },
        {
            "label": "Build web client",
            "type": "shell",
            "command": "cd client;ng build --watch --base-href=/static/ --output-path=../server/web/production",
            "problemMatcher": []
        },
        {
            "label": "Run server locally",
            "type": "shell",
            "command": "cd server;npm run dev",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "compile protobuf (native)",
            "command": "protoc",
            "args": [ "--nanopb_out=${workspaceFolder}/../BluePillTest/src", "protocol.proto" ],
            "options": {
                "cwd": "${workspaceFolder}/protocol"
            },
        },
        {
            "type": "shell",
            "label": "compile protobuf (nodejs)",
            "command": "protoc",
            "args": [ 
                "--plugin=\"protoc-gen-ts=./../server/node_modules/.bin/protoc-gen-ts\"", 
                "--js_out=\"import_style=commonjs,binary:./../server/src\"",
                "--ts_out=\"./../server/src\"",
                "protocol.proto" ],
            "options": {
                "cwd": "${workspaceFolder}/protocol"
            },
        }
    ]
}